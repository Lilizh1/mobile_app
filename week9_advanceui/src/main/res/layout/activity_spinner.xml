<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="10dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        android:textColor="@color/blue"
        android:textSize="17sp"
        android:gravity="center"
        android:text="下拉列表Spinner" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="去哪学习？（下拉模式的列表框）"/>

    <!--android:spinnerMode属性的值设置为"dropdown"决定了其为下拉模式 -->
    <Spinner
        android:id="@+id/sp_dropdown"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:spinnerMode="dropdown" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="到哪运动？（对话框模式的列表框）"/>

    <!--android:spinnerMode属性的值设置为"dialog"决定了其为对话框模式 -->
    <Spinner
        android:id="@+id/sp_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/palySites"
        android:spinnerMode="dialog" />

    <TextView
        android:id="@+id/sp_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>